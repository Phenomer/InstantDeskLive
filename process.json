[
    {
        "name": "WebServer",
        "command": "caddy.exe",
        "args": [
            "run"
        ]
    },
    {
        "name": "DesktopCapture",
        "command": "ffmpeg.exe",
        "args": [
            "-f",
            "gdigrab",
            "-framerate",
            "30",
            "-offset_x",
            "0",
            "-offset_y",
            "0",
            "-video_size",
            "1920x1080",
            "-i",
            "desktop",
            "-pix_fmt",
            "yuv420p",
            "-vcodec",
            "libx264",
            "-profile:v",
            "baseline",
            "-preset",
            "veryfast",
            "-tune",
            "zerolatency",
            "-x264-params",
            "nal-hrd=cbr:force-cfr=1:bframes=0",
            "-g",
            "15",
            "-keyint_min",
            "15",
            "-b:v",
            "8000k",
            "-maxrate",
            "8000k",
            "-bufsize",
            "8000k",
            "-qmin",
            "10",
            "-qmax",
            "40",
            "-hls_time",
            "1",
            "-hls_list_size",
            "2",
            "-hls_flags",
            "delete_segments+omit_endlist+append_list+discont_start+program_date_time",
            "-hls_allow_cache",
            "0",
            "-hls_segment_type",
            "mpegts",
            "-hls_init_time",
            "1",
            "-hls_segment_filename",
            "public/segment%d.ts",
            "public/output.m3u8"
        ]
    }
]
